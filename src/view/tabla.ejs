<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Consulta</title>
<link rel="shortcut icon" href="https://comprasinteligentes.co/ccunicentropereira/logo.jpg">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<style>
    body {
        background-image: url("https://comprasinteligentes.co/ccunicentropereira/login.jpeg");
        background-repeat: no-repeat;
        /* El fonde no se repite */
        background-repeat: no-repeat;
          /* Fijamos la imagen a la ventana para que no supere el alto de la ventana */
          background-attachment: fixed;
          background-size: 100% 100%;
    }
    #tabla{
        margin-top:150px;
    }
    .header .navbar {
      background-color:#df3b51 !important; 
    }

    button{
        color: #ffffff !important;
    }
    li {
        padding-left: 20px;
    }
    /*SPINNER*/
 #overlay{	
        position: fixed;
        top: 0;
        z-index: 100;
        width: 100%;
        height:100%;
        display: none;
        background: rgba(0,0,0,0.6);
      }
      .cv-spinner {
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;  
      }
      .spinner {
        width: 40px;
        height: 40px;
        border: 4px #ddd solid;
        border-top: 4px #2e93e6 solid;
        border-radius: 50%;
        animation: sp-anime 0.8s infinite linear;
      }
      @keyframes sp-anime {
        100% { 
          transform: rotate(360deg); 
        }
      }
      .is-hide{
        display:none;
      }
</style>
<script>
  function client(id){
        var ruta = window.location.origin;
        $("#overlay").fadeIn(1000); 
        setTimeout(function(){
                window.location = ruta +"/ccunicentropereira/info/cliente/"+id;  
                $("#overlay").fadeOut(1000);   
            },1000);                 
    }
    function table(id){
        var ruta = window.location.origin;
        $("#overlay").fadeIn(1000); 
        setTimeout(function(){
                window.location = ruta +"/ccunicentropereira/info/consulta/"+id; 
                $("#overlay").fadeOut(1000);    
            },1000);             
    }

    function back(){
        var ruta = window.location.origin;
        $("#overlay").fadeIn(1000);
        setTimeout(function(){
                window.location = ruta +"/ccunicentropereira/info/";
                $("#overlay").fadeOut(1000);      
            },1000);             
    }
</script>
</head>
<body>
  <div id="overlay">
    <div class="cv-spinner">
      <span class="spinner"></span>
    </div>
  </div>  
    <header class="header">
        <% if (cliente) { %> 
        <nav class="navbar navbar-expand-lg navbar-light bg-light">                
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
              <div class="btn-group">                                                                            
                <li class="nav-item active">
                    <button type="button" class="btn btn-outline-info" onclick="client(<%= cliente.DOCUMENTO %>)"><i class="fa-solid fa-person"></i>  Informaci√≥n cliente </button>
                </li>
                <li class="nav-item">
                    <button type="button" class="btn btn-outline-info" onclick="table(<%= cliente.DOCUMENTO %>)"><i class="fa-solid fa-magnifying-glass"></i>  Consulta </button>
                </li>              
                <li class="nav-item">
                    <button type="button" class="btn btn-outline-info" onclick="back()"><i class="fa-solid fa-arrow-right-from-bracket"></i>  Regresar</button>
                </li>
            </div> 
            </ul>
          </div>
        </nav>
        <% } %> 
      </header>
    <div class="container" id="tabla">
        <table class="table">
            <thead class="table-dark">
            <tr>
                <th scope="col">CONSECUTIVO</th>
                <th scope="col">FECHA</th>
                <th scope="col">TOTAL</th>
            </tr>
            </thead>
            <tbody class="table-group-divider table-info" >
            <tr>
                <% consulta.forEach((user)=> { %>
                <td><%= user.CONSECUTIVO %></td>
                <td><%= user.FECHAADJUDICACION %></td>
                <td><%= user.COMPRAS %></td>
                <% }) %>
            </tr>
            </tbody>
        </table>
      </div>
</body>
</html>
</html>